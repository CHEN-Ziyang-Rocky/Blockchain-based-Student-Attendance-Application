        "/operator/registerStudent": {
            "post": {
                "tags": [
                    "operator"
                ],
                "summary": "Register a new student",
                "description": "Registers a new student by creating a wallet and storing the public key on the blockchain.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Student registration details",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "User_ID": {
                                    "type": "string",
                                    "description": "The student ID for the new student"
                                },
                                "password": {
                                    "type": "string",
                                    "description": "The password to create the wallet for the student"
                                }
                            },
                            "required": ["User_ID", "password"]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Student registered successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "User_ID": { "type": "string" },
                                "walletID": { "type": "string" },
                                "publicKey": { "type": "string" }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input data"
                    }
                }
            }
        }, 
        "/operator/attendance": {
            "post": {
                "tags": [
                    "operator"
                ],
                "summary": "Record attendance",
                "description": "Allows a student to record attendance by submitting a signed attendance certificate.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Signed attendance certificate",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "User_ID": {
                                    "type": "string",
                                    "description": "The student's ID",
                                    "example": "student123"
                                },
                                "eventId": {
                                    "type": "string",
                                    "description": "The event or class ID for which attendance is being recorded",
                                    "example": "event456"
                                },
                                "timestamp": {
                                    "type": "integer",
                                    "description": "Timestamp of when the attendance was recorded",
                                    "example": 1638288000000
                                },
                                "signature": {
                                    "type": "string",
                                    "description": "Digital signature generated by the student's private key",
                                    "example": "signature123"
                                }
                            },
                            "required": ["User_ID", "eventId", "timestamp", "signature"]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Attendance recorded successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                },
                                "transactionId": {
                                    "type": "string",
                                    "description": "Transaction ID of the attendance record"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input data"
                    },
                    "403": {
                        "description": "Signature verification failed"
                    }
                }
            }
        },
        "/operator/attendance": {
            "post": {
                "tags": [
                    "operator"
                ],
                "summary": "Record attendance transaction",
                "description": "Allows a user to initiate an attendance transaction by submitting their attendance details.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Details for the attendance transaction",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "User_ID": {
                                    "type": "string",
                                    "description": "The user's ID (either student or teacher)",
                                    "example": "student123"
                                },
                                "eventId": {
                                    "type": "string",
                                    "description": "The event or class ID for which attendance is being recorded",
                                    "example": "event456"
                                },
                                "timestamp": {
                                    "type": "integer",
                                    "description": "Timestamp of the attendance transaction",
                                    "example": 1638288000000
                                },
                                "signature": {
                                    "type": "string",
                                    "description": "Digital signature generated by the user's private key",
                                    "example": "signature123"
                                }
                            },
                            "required": ["User_ID", "eventId", "timestamp", "signature"]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Attendance transaction initiated successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Attendance transaction created successfully"
                                },
                                "transactionId": {
                                    "type": "string",
                                    "description": "The unique ID of the created transaction",
                                    "example": "tx123456"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input data",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Invalid input data"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/operator/event": {
            "post": {
                "tags": [
                    "operator"
                ],
                "summary": "Create and sign an event",
                "description": "Allows a teacher to create and sign an event by submitting their details and a deadline (ddl).",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Details for the event creation",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "User_ID": {
                                    "type": "string",
                                    "description": "The teacher's ID",
                                    "example": "teacher123"
                                },
                                "eventId": {
                                    "type": "string",
                                    "description": "The unique ID of the event",
                                    "example": "event456"
                                },
                                "ddl": {
                                    "type": "string",
                                    "description": "The deadline for the event in YYYY/MM/DD HH:mm format",
                                    "example": "2024/12/02 15:30"
                                },
                                "privateKey": {
                                    "type": "string",
                                    "description": "The teacher's private key for signing the event",
                                    "example": "privateKey123"
                                }
                            },
                            "required": ["User_ID", "eventId", "ddl", "privateKey"]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Event created and signed successfully",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Event created successfully"
                                },
                                "transactionId": {
                                    "type": "string",
                                    "description": "The unique ID of the created event transaction",
                                    "example": "event_123"
                                },
                                "timestamp": {
                                    "type": "integer",
                                    "description": "The timestamp of the event based on the ddl",
                                    "example": 1735689599000
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input data",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Invalid input data"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Unauthorized user",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "User is not authorized to create events"
                                }
                            }
                        }
                    }
                }
            }
        },                

